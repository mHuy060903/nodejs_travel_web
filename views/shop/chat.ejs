<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
      integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk="
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/chat.css" />
    <title>ChatCord App</title>
  </head>
  <body>
    <div class="chat-container">
      <header class="chat-header">
        <h1><i class="fas fa-smile"></i> ChatCord</h1>
      </header>
      <main class="chat-main">
        <div class="chat-sidebar">
          <h3><i class="fas fa-comments"></i>Chat With:</h3>
          <% if(!chatWith.name) { %>
          <h3>Selected someone to chat</h3>
          <% } else { %>
          <div class="chat_user">
            <img src="/<%=chatWith.image%>" class="chat_img" alt="" />
            <h3 id="chat_user_name"><%=chatWith.name%></h3>
          </div>
          <% } %>
          <h3><i class="fas fa-users"></i> Users</h3>

          <ul id="users">
            <% if(userChat.length > 0) { %> <% for(let user of userChat) { %> <%
            if(user._id.toString() !== chatWith._id.toString()) { %>
            <a href="/chatwith/<%=user._id%>" style="color: white">
              <div class="chat_user">
                <img src="/<%=user.image%>" class="chat_img" alt="" />
                <h3 id="chat_user_name"><%=user.name%></h3>
              </div>
            </a>
            <% } %> <% } %> <% } %>
          </ul>
        </div>
        <div class="chat-messages <% if(chatId) { %> chat<%=chatId%> <% } %>">
          <% if(message.length > 0) { %> <% for(let mes of message) { %>
          <div class="message">
            <img src="/<%=mes.sender.image%>" class="chat_img" alt="" />
            <div class="message_container">
              <p class="meta">
                <%=mes.sender.name%> <span><%=mes.timeChat%></span>
              </p>
              <p class="text"><%=mes.content%></p>
            </div>
          </div>
          <% } %> <% } %>
        </div>
      </main>
      <div class="chat-form-container">
        <!--  action="/chatwith/<%=chatWith._id%>" method="post" -->
        <form id="chat-form">
          <input type="hidden" value="<%=chatWith._id%>" name="chatWithId" />
          <input type="hidden" value="<%=chatId%>" name="chatId" />
          <input
            id="msg"
            type="text"
            placeholder="Enter Message"
            required
            autocomplete="off"
            name="content"
          />
          <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
        </form>
      </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js"></script>
  </body>
</html>
